<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="MainSceneController">
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Konfiguracja Gry w Życie" style="-fx-font-size: 18px;" />

        <HBox spacing="10">
            <Label text="Wpisz ilość wierszy: " />
            <TextField fx:id="rowsInput" promptText="Wiersze (4-20)" />
        </HBox>

        <HBox spacing="10">
            <Label text="Wpisz ilość kolumn: " />
            <TextField fx:id="colsInput" promptText="Kolumny (4-20)" />
        </HBox>

        <HBox spacing="10">
            <Label text="Gęstość żywych komórek:" />
            <ComboBox value="SREDNI" fx:id="densityComboBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="MALY"/>
                        <String fx:value="SREDNI"/>
                        <String fx:value="DUZY"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <Button text="Rozpocznij" onAction="#startSimulation" />
    </VBox>
</AnchorPane>
